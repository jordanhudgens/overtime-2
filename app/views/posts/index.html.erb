

	



<div class="container">
	<div class="row">
		<h1>Post</h1>

	</div>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover table-striped">
				<thead>

					<tr>
						<th>
							ID
						</th>
						<th>
							Name
						</th>
						<th>
							Date
						</th>
						<th>
							Rationale
						</th>
						
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<td>
								<%=post.id%>
							</td>
							<td>
								<%=post.user.first_name%>
							</td>
							<td>
								<%=post.date%>
							</td>
							<td>
								<%=post.rationale%>
							</td>
							
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>