

<%if @post.errors.any?%>

	<%@post.errors.full_messages.each do |error|%>
		<%= js add_gritter(error, title: "Overtime App Notification", sticky: false, time: 4000) %>

	<%end%>
<%end%>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<%= form_for @post, role: "form" do |f| -%>
			
				<div class="form-group">
					 
					
					<%= f.label :date, "Date" %>
					<%= f.date_field :date, class: "form-control", id: "exampleInputDate" %>
					
				</div>
				<div class="form-group">
					 
					<%= f.label :rationale, "Rationale" %>
					<%= f.text_field :rationale, class: "form-control", id: "exampleInputRationale" %>
				</div>

				<%= f.submit "Save", :disable_with => 'Saving...', class: "btn btn-default" %>
				
				
			
			<%end%>
		</div>
	</div>
</div>